{
  "name": "@djbe/blog",
  "version": "0.0.0",
  "description": "Backend for the Blog application",
  "author": "DJ BlackEagle",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "clean": "turbo clean && rm -rf node_modules/ .turbo/",
    "clean:build": "turbo run clean:build",
    "clean:turbo": "turbo run clean:turbo && rm -rf .turbo/",
    "clean:node": "turbo run clean:node && rm -rf node_modules/",
    "build": "turbo run build",
    "build:dev": "turbo run build:dev",
    "format": "turbo run format",
    "start": "turbo run start",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "turbo run test:e2e",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:down:clean": "docker compose down --volumes --remove-orphans"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript-eslint": "^8.34.1"
  }
}
